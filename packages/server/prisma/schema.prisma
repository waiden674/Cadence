// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                  String      @id @default(uuid())
  firstName           String?
  lastName            String?
  displayName         String?
  username            String
  email               String?
  githubSocialId      String      @unique
  googleSocialId      String?     @unique
  bio                 String
  photo               String
  skills              String[]
  hackathonsOrganized Hackathon[] @relation("HackathonOrganized")
  // hackathonsParticipated Hackathon[] @relation("HackathonParticipated")
  interests           String[]
  github              String?
  twitter             String?
  website             String?
  linkedin            String?
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  teams               Team[]
}

model Hackathon {
  id          String   @id @default(uuid())
  name        String
  // slugified version of name
  slug        String   @unique
  // in usd
  prizes      Int
  organizer   User     @relation("HackathonOrganized", fields: [organizerId], references: [id])
  organizerId String
  // hackers     User[]   @relation("HackathonParticipated", fields: [organizerId], references: [id])
  startingAt  DateTime
  endingAt    DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  teams       Team[]
}

model Team {
  id            String    @id @default(uuid())
  hackathon     Hackathon @relation(fields: [hackathonId], references: [id])
  hackathonId   String
  participants  User[]
  inviteCode    String
  projectName   String?
  elevatorPitch String?
  // markdown string
  aboutProject  String?
  builtWith     String[]
  links         String[]
  demoLink      String?
  images        String[]
}
